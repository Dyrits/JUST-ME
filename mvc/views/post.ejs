<%- include("./partials/header.ejs") %>
<div id="colorlib-main">
    <section class="ftco-section ftco-no-pt ftco-no-pb">
        <div class="container px-0">
            <div class="row d-flex no-gutters">
                <div class="col-lg-8 px-md-5 py-5">
                    <div class="row">
                        <h1 class="mb-3"><%= post.title %></h1>
                        <% for (let element of post.body) { %>
                            <%- element %>
                        <% } %>

                        <div class="tag-widget post-tag-container mb-5 mt-5">
                            <div class="tagcloud">
                                <% for (let tag of post.tags) { %>
                                    <a href="" class="tag-cloud-link"><%- tag %></a>
                                <% } %>
                            </div>
                        </div>

                        <div class="about-author d-flex p-4 bg-light">
                            <div class="bio mr-5">
                                <img src="/images/author.jpg" alt="Image placeholder" class="img-fluid mb-4">
                            </div>
                            <div class="desc">
                                <h3>Abigail Edwards</h3>
                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ducimus itaque, autem necessitatibus voluptate quod mollitia delectus aut, sunt placeat nam vero culpa sapiente consectetur similique, inventore eos fugit cupiditate numquam!</p>
                            </div>
                        </div>


                        <div class="pt-5 mt-5">
                            <h3 class="mb-5 font-weight-bold"><%= post.numOfComments %>> Comments</h3>
                            <ul class="comment-list">
                                <% function displayComments(comments, nested) {
                                    if(nested) { %> <ul class="children"> <% } %>
                                        <% for(let comment of comments) { %>
                                            <li class="comment">
                                                <div class="vcard bio">
                                                    <img src="<%= comment.userImg %>" alt="User image">
                                                </div>
                                                <div class="comment-body">
                                                    <h3><%= comment.user %></h3>
                                                    <div class="meta"><%= comment.date %></div>
                                                    <p><%= comment.body %></p>
                                                    <p><a href="#" class="reply">Reply</a></p>
                                                </div>
                                                <% if(comments.length) {
                                                    displayComments(comment.comments, true)
                                                }%>
                                            </li>
                                        <% }
                                    if(nested) { %> </ul> <% }
                                }
                                displayComments(post.comments, false);
                                %>
                            </ul>
                            <!-- END comment-list -->

                            <div class="comment-form-wrap pt-5">
                                <h3 class="mb-5">Leave a comment</h3>
                                <form action="#" class="p-3 p-md-4 bg-light">
                                    <div class="form-group">
                                        <label for="name">Name *</label>
                                        <input type="text" class="form-control" id="name">
                                    </div>
                                    <div class="form-group">
                                        <label for="email">Email *</label>
                                        <input type="email" class="form-control" id="email">
                                    </div>
                                    <div class="form-group">
                                        <label for="website">Website</label>
                                        <input type="url" class="form-control" id="website">
                                    </div>

                                    <div class="form-group">
                                        <label for="message">Message</label>
                                        <textarea name="" id="message" cols="30" rows="10" class="form-control"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Post Comment" class="btn py-3 px-4 btn-primary">
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div><!-- END-->
                </div>
            <%- include("./partials/sidebar-right.ejs") %>
        </div>
    </section>
</div><!-- END COLORLIB-MAIN -->
<%- include("./partials/footer.ejs") %>