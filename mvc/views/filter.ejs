<%- include('partials/header.ejs'); %>
<div id="colorlib-main">
    <section class="ftco-section ftco-no-pt ftco-no-pb">
        <div class="container px-0">
            <div class="row no-gutters">
                <% if(posts.length == 0) { %>
                    <div class="mt-5 pt-5">
                        <h1 class="font-weight-bold display-4">No articles found.</h1>
                        <h4 class="font-weight-light">Go back to the <a href="/">home page</a>?</h4>
                    </div>
                <% } %>
                <% for(let post of posts) { %>
                    <div class="col-md-12 blog-wrap">
                        <div class="row no-gutters align-items-center">
                            <div class="col-md-6 img js-fullheight" style="background-image: url(images/<%= post.image %>);">
                            </div>
                            <div class="col-md-6">
                                <div class="text p-md-5 p-4 ftco-animate">
                                    <div class="heading">
                                        <div class="meta-wrap">
                                            <p class="meta">
                                                <span><i class="icon-calendar mr-2"></i><%= post.date %></span>
                                                <span><a href="/filter?category=<%= post.category %>" class="text-capitalize"><i class="icon-folder-o mr-2"></i><%= post.category %></a></span>
                                                <span><i class="icon-comment2 mr-2"></i><%= post.numOfComments %> Comment</span>
                                            </p>
                                        </div>
                                        <h2 class="mb-5"><a href="/posts/<%= post.id %>"><%= post.title %></a></h2>
                                    </div>
                                    <%
                                        const pattern = new RegExp("^<p>[^<]");
                                        let preview = String();
                                        for(let element of post.body) {
                                            if(pattern.test(element)) {
                                                preview = element;
                                                break;
                                            }
                                        }
                                    %>
                                    <p><%- preview.slice(0, 256) + "..." %></p>
                                    <div class="icon d-flex align-items-center my-5">
                                        <div class="img" style="background-image: url(images/author.jpg);"></div>
                                        <div class="position pl-3">
                                            <h4 class="mb-0">Abigail Edwards</h4>
                                            <span>fashion.com</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                <% } %>

            </div>
        </div>
    </section>
</div>
<%- include('partials/footer.ejs'); %>